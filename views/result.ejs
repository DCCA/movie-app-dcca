<%- include('./partials/header'); -%>
<section class='col-11 col-mx-auto'>
	<h1>
		Results
	</h1>
	<ul class='movie-list'>
	<% if(jData['Response'] === 'True'){ %>
		<% jData['Search'].forEach((movie) => { %>
			<li class="movie movie-card" value='<%= movie['imdbID'] %>' style='background-image: url("<%= movie['Poster']%>");'>
    			<div class="card-title" value='<%= movie['imdbID'] %>'><%= movie['Title'] %></div>
			</li>
		<%	}) %>
	<% } else{ %>
			<li class="col-11 col-mx-auto">
				<p>
					Sorry, no movies found. Try again!
				</p>
			</li>	
	<% } %>
	</ul>
</section>

<%- include('./partials/footer'); -%>